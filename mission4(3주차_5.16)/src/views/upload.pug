extends base.pug

block content 
    h2 this is Upload!

    form(method = "POST")
        input(name = "title", placeholder = "Title", required, type = "text", maxlength = 20)
        input(name = "summary", placeholder = "Summary", type = "text", maxlength = 500)
        input(name = "year", placeholder = "Year", type = "number", required)
        input(name = "genres", placeholder = "Genres, Please Write genres seprated by comma", required, type = "text")
        input(name = "rating", placeholder= "Rating", type = "number", min = 1, max = 5, required)
        input(type= "submit", value = "Upload Movie")

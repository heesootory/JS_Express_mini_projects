doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
    body 
        h1=pageTitle

        form(method="POST", action="/read", enctype = "multipart/form-data")
            label(for = "text") text file 
            input(type = "file", accept ="txt/*", required, id = "text", name = "text")
            input(type = "submit", value ="Upload text file")

        ul
            each file in files
                li
                    a(href=`/read/${file}`)=file

        